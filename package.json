{
	"name": "material-ripple-web",
	"description": "Library for adding ripple effects to the web",
	"version": "0.0.2",
	"scripts": {
		"build": "rm -rf ./dist/* && tsc && cp ./src/ripple.css ./dist/ripple.css",
		"format": "prettier --write .",
		"prepublishOnly": "pnpm build"
	},
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./react": {
			"types": "./dist/react/index.d.ts",
			"import": "./dist/react/index.js"
		},
		"./ripple.css": {
			"import": "./dist/ripple.css"
		},
		"./svelte": {
			"types": "./dist/svelte/index.d.ts",
			"import": "./dist/svelte/index.js"
		}
	},
	"files": [
		"dist"
	],
	"author": "abdel-17",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/abdel-17/material-ripple-web.git"
	},
	"keywords": [
		"material design",
		"ripple",
		"web",
		"react",
		"svelte"
	],
	"peerDependencies": {
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"svelte": "^3.0.0 | ^4.0.0"
	},
	"peerDependenciesMeta": {
		"react": {
			"optional": true
		},
		"react-dom": {
			"optional": true
		},
		"svelte": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/react": "^18.2.55",
		"@types/react-dom": "^18.2.19",
		"prettier": "^3.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"svelte": "^4.2.10",
		"typescript": "^5.3.2"
	}
}
