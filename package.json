{
	"name": "material-ripple-web",
	"description": "Library for adding ripple effects to the web",
	"version": "0.1.0",
	"scripts": {
		"build": "rm -rf ./dist/* && tsc && cp ./src/ripple.css ./dist/ripple.css",
		"format": "prettier --write .",
		"prepublishOnly": "pnpm build"
	},
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./ripple.css": {
			"import": "./dist/ripple.css"
		}
	},
	"files": ["dist", "src/**/*.ts"],
	"author": "abdel-17",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/abdel-17/material-ripple-web.git"
	},
	"keywords": ["ripple", "material design", "web"],
	"devDependencies": {
		"prettier": "^3.1.0",
		"typescript": "^5.3.2"
	}
}
